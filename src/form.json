{
    "name": {
        "type": "text",
        "id": "name",
        "name": "name",
        "validation": {
            "type": "string",
            "field": "alphanum",
            "required": true,
            "min": 3,
            "max": 30
        },
        "placeholder": "Type your name"
    },

    "address": {
        "type": "text",
        "id": "address",
        "name": "address",
        "validation": {
            "type": "string",
            "field": "alphanum",
            "required": true,
            "min": 10,
            "max": 50
        },
        "placeholder": "Type your address"
    },

    "email": {
        "type": "email",
        "id": "email",
        "name": "email",
        "validation": {
            "type": "string",
            "email": {
                "tlds": {
                    "allow": false
                }
            },
            "required": true
        },
        "placeholder": "Type your email"
    },

    "phone": {
        "type": "tel",
        "id": "phone",
        "name": "phone",
        "validation": {
            "type": "number",
            "field": "integer",
            "required": true,
            "min": 1000000,
            "max": 9999999999
        },
        "placeholder": "Type your phone"
    }
}